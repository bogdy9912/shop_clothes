<!DOCTYPE html>
<html  lang="ro">
    <head>
        <link rel="stylesheet" href="css/useri.css" type="text/css" />
        <title>Simple Properties - utilizatori</title>
        <%- include("../fragmente/head") %>     
        <script type="text/javascript" src=js/produse.js></script>
    </head>
    <body>

	<%- include("../fragmente/nav_bar", {optiuni: optiuni}) %>

    <main>
    <div class="afisaj">
        <h2>Useri</h2>

		<table id="useri">
		  <tr>
			<th>id</th><th>Username</th><th>Poza</th><th>probleme vedere</th><th>Data</th><th>Rol</th>
		  </tr>

		  <% for (var i = 0; i < useri.length; i++) { 
				if(useri[i].rol=="comun"){
				%>
				<tr>
				  <td><%= useri[i].id %></td>
				  <td><%= useri[i].username %></td>
				  <td>

					  <img src="poze_uploadate/<%- useri[i].username %>/<%- useri[i].fotografie %>" alt="aici e poza">
					  <%= useri[i].fotografie %></td>
				  <td><%= useri[i].problema_vedere %></td>
				  <%  
					d=new Date(useri[i].data_adaugare)
					sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
				  %>
				  <td><%=  sir_data %></td>
				   <td><%=  useri[i].rol %></td>
				</tr> 
   
				<% } %>			
		  <% } %>
		</table>
		
		<p>Sterge utilizator</p>
		<form id="sterge" method="post" action="/sterge_utiliz">
			<label>
				Id: <input type="text" name="id_utiliz" value="">
			</label>
			
			<input type="submit" value="Submit">
		</form>
	</div>
</main>


    <%- include("../fragmente/footer") %>

</body>
</html>